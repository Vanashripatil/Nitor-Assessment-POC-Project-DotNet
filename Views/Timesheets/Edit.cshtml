@model Organization_Assessment_Project_NEW.Models.Timesheet

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Timesheet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TimesheetId" />
            <div class="form-group">
                <label asp-for="TimesheetComment" class="control-label"></label>
                <input asp-for="TimesheetComment" class="form-control" />
                <span asp-validation-for="TimesheetComment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DayOfWeek" class="control-label"></label>
                <input asp-for="DayOfWeek" class="form-control" />
                <span asp-validation-for="DayOfWeek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="hour" class="control-label"></label>
                <input asp-for="hour" class="form-control" />
                <span asp-validation-for="hour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OvertimeHour" class="control-label"></label>
                <input asp-for="OvertimeHour" class="form-control" />
                <span asp-validation-for="OvertimeHour" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
